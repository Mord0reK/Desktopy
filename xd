    <!-- Kontener Modala -->
    <div class="modal" id="imageModal">
        <span class="close-btn">&times;</span>
        <img class="modal-content" id="modalImg">
    </div>

    <script>
        $(document).ready(function() {
            // 5. Efekty jQuery przy starcie strony
            // Miniaturki pojawiają się jedna po drugiej
            $('.gallery-item').each(function(index) {
                $(this).delay(150 * index).fadeIn(500);
            });

            // 4. Filtrowanie obrazów
            $('.filter-btn').click(function() {
                // Obsługa aktywnej klasy przycisku
                $('.filter-btn').removeClass('active');
                $(this).addClass('active');

                const category = $(this).data('filter');

                if (category === 'all') {
                    // Pokaż wszystkie
                    $('.gallery-item').fadeOut(200).promise().done(function() {
                        $('.gallery-item').fadeIn(400);
                    });
                } else {
                    // Ukryj wszystkie, potem pokaż pasujące
                    $('.gallery-item').fadeOut(200).promise().done(function() {
                        $('.gallery-item[data-category="' + category + '"]').fadeIn(400);
                    });
                }
            });

            // 2. Powiększanie obrazu po kliknięciu
            $('.gallery-item img').click(function() {
                const src = $(this).attr('src');
                $('#modalImg').attr('src', src);
                $('#imageModal').fadeIn(300); // Animacja otwierania
            });

            // 3. Zamykanie powiększenia (X lub tło)
            $('.close-btn, .modal').click(function(event) {
                // Zapobiegamy zamknięciu, jeśli kliknięto w sam obrazek, a nie tło
                if (event.target !== document.getElementById('modalImg')) {
                    $('#imageModal').fadeOut(300); // Animacja zamykania
                }
            });
        });
    </script>
