        .filters { margin-bottom: 30px; }
        .filter-btn {
            background-color: #444;
            color: white;
            border: 1px solid #666;
            padding: 10px 20px;
            cursor: pointer;
            margin: 0 5px;
            transition: background 0.3s;
        }
        .filter-btn:hover, .filter-btn.active {
            background-color: #007bff;
            border-color: #007bff;
        }

        /* Siatka galerii */
        .gallery-container {
            display: flex;
