    <h1>Moja Galeria jQuery</h1>

    <!-- 4. Filtrowanie obrazów -->
    <div class="filters">
        <button class="filter-btn active" data-filter="all">Wszystkie</button>
        <button class="filter-btn" data-filter="landscape">Krajobrazy</button>
        <button class="filter-btn" data-filter="city">Miasta</button>
        <button class="filter-btn" data-filter="animal">Zwierzęta</button>
    </div>

    <!-- 1. Wyświetlanie miniaturek (Siatka 3x2) -->
    <div class="gallery-container">
        <!-- Obrazy z placeholderami dla uproszczenia -->
        <div class="gallery-item" data-category="landscape">
